<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 20px;
        }
        h1 {
            text-align: center;
            color: #333;
        }
        h2 {
            color: #555;
        }
        form {
            padding: 20px;
            max-width: 400px;
            margin: auto;
        }
        .info {
            background-color: #fff;
            padding: 15px;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }
        .info p {
            margin: 5px 0;
        }
        .actions {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .button {
            background-color: #5cb85c;
            color: white;
            padding: 10px 15px;
            text-decoration: none;
            border-radius: 4px;
            margin: 5px 0;
            transition: background-color 0.3s ease;
        }
        .button:hover {
            background-color: #4cae4c;
        }
        .back-button {
            margin-top: 15px; /* Add some spacing */
            background-color: #d9534f; /* Red color for back button */
        }
    </style>
</head>
    <script>
        function confirmLogout() {
            return confirm("Are you sure to Logout?");
        }
    </script>
<body>
    <h1>Welcome, <%= user.name %>!</h1>

    <div class="info">
        <h2>Your Information:</h2>
        <p><strong>ID:</strong> <%= user.id %></p>
        <p><strong>Name:</strong> <%= user.name %></p>
        <p><strong>Phone:</strong> <%= user.phoneNo %></p>
        <p><strong>Admin:</strong> <%= user.admin ? 'Yes' : 'No' %></p>
    </div>

    <div class="actions">
        <h2>Actions</h2>
        <a href="/sinfo/<%= user._id %>" class="button">View Student Info</a>
        <a href="/updateInfo/<%= user._id %>" class="button">Update Your Information</a>
        <a href="/create/<%= user._id %>" class="button">Create New User</a>
        <form id="logout" action="/logout" method="GET" onsubmit="return confirmLogout()">
    		<button class="button back-button" type="submit">Logout</button>
    	</form>
    </div>

</body>
</html>

